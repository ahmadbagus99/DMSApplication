@page
@model LoginModel

@{
    ViewData["ShowSidebar"] = false;
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="container p-4" style="max-width: 500px;">
        <div class="position-relative mb-4">
            <div class="position-relative" style="margin-top: 40px;">
                <div style="height: 5px; background: linear-gradient(to left, yellow, yellow); position: absolute; top: 0; left: 0; right: 0;"></div>
                <div style="height: 5px; background: linear-gradient(to left, yellow, green); position: absolute; top: 5px; left: 0; right: 0;"></div>
            </div>
            <h1 class="position-absolute" style="left: -80px; top: -30px; font-size: 2.5em; font-weight: bold; background-color: #f8f9fc; padding: 0 10px; color: #000000;">System</h1>
            <h5 class="position-absolute" style="left: 65px; top: 10px; font-weight: bold; color: #000000;">Testing Application</h5>
        </div>

        <p class="text-center" style="padding-top: 80px;">Selamat Datang Kembali! Silahkan Masukan Detail Anda</p>

        <form method="post">
            <div class="form-group row">
                <div class="col-12 text-start">
                    <label asp-for="Input.Email" class="form-label">Username <span style="color: red;">*</span></label>
                    <input type="text" asp-for="Input.Email" class="form-control" placeholder="Masukan Username" />
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-12 text-start">
                    <label asp-for="Input.Password" class="form-label">Password <span style="color: red;">*</span></label>
                    <input type="password" asp-for="Input.Password" class="form-control" placeholder="Masukan Password" />
                </div>
            </div>
            <div class="form-group row mt-4">
                <div class="col-12">
                    <button id="login-submit" type="submit" class="btn btn-success w-100">Login</button>
                </div>
            </div>

            <!-- Notifikasi Error di bawah tombol login -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger mt-3" role="alert">
                    Login gagal. Silakan periksa username dan password Anda.
                </div>
            }
        </form>
    </div>
</div>

